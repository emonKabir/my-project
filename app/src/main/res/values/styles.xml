<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editText">

        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/edittext</item>

    </style>

    <style name="editTextProfile">

        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">0dp</item>
      <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/edittext</item>

    </style>
    <style name="textProfile">

        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/ericBlack</item>

    </style>
    <style name="editTextInRegister">

        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:background">@drawable/edittext</item>

    </style>

    <style name="diseaseListText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/diseaseListTextSize</item>
        <item name="android:layout_marginLeft">@dimen/diseaseListTextMargin</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/diseaseListTextMargin</item>


    </style>

    <style name="menuTextView">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/menuTextviewMarginTop</item>
        <item name="android:textSize">@dimen/menuTexttxtSize</item>


    </style>

    <style name="menuTextView2">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/menuTextviewMarginTop</item>
        <item name="android:textSize">@dimen/menuTexttxtSize</item>
        <item name="android:paddingRight">5dp</item>


    </style>

    <style name="menuFabButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


    </style>

    <style name="alignmentLeft">

        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="dividerBase">
        <item name="android:background">?android:attr/listDivider</item>
        //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="dividerHorizontal" parent="dividerBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        // You can change thickness here.

    </style>

    <style name="dividerVertical" parent="dividerBase">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="listview_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_margin">5dp</item>
        <!--<item name="android:layout_weight">1</item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:padding">5dp</item>-->
        <!--<item name="android:gravity">center</item>-->
        <!--<item name="android:singleLine">true</item>-->

    </style>
