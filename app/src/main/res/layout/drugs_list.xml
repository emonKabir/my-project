<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Pharmacologist.Drugs"
    android:layout_margin="10dp"
    >



    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="10dp"


        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"

            >

            <TextView

                android:id="@+id/TradeName"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="@dimen/loginHeight"
                android:background="@drawable/button_background"
                android:gravity="center_horizontal|center"
                android:text="@string/add_drug"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/loginTextsize"
                android:layout_weight="1"
                />

            <TextView

                android:id="@+id/genericType"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="@dimen/loginHeight"
                android:background="@drawable/button_background"
                android:gravity="center_horizontal|center"
                android:text="@string/add_drug"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/loginTextsize"
                android:layout_weight="1"
                />


        </LinearLayout>

        <TextView

            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_height="@dimen/loginHeight"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal|center"
            android:text="@string/add_drug"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/loginTextsize"
            android:layout_weight="1"
            />

        <TextView

            android:id="@+id/genericName"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="@dimen/loginHeight"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal|center"
            android:text="@string/add_drug"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/loginTextsize"

            />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/Dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true"
            android:text="Dose"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"


            />

        <TextView
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Price"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            />
    </RelativeLayout>



    </LinearLayout>




</LinearLayout>