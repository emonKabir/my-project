<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpicture"
    tools:context=".RegisterActivity"
    android:clickable="true"
    android:focusableInTouchMode="true"

    >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundOpacityColor"


        />

    <LinearLayout
        android:id="@+id/restlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/layoutMarginLeft"
        android:layout_marginRight="@dimen/layoutMarginRight"
        android:layout_marginTop="@dimen/layoutMarginTop"
        android:gravity="left"
        android:orientation="vertical"

        >



        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextheight"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:background="@drawable/edittext"
            android:hint="@string/mobile_number"
            android:paddingLeft="@dimen/edittextPaddingLeft"
            android:inputType="phone"
            android:maxLength="11"
            android:digits="0123456789"


            />

        <EditText

            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextheight"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:background="@drawable/edittext"
            android:hint="@string/full_name"
            android:paddingLeft="@dimen/edittextPaddingLeft"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/relativeMarginRight"
                android:layout_weight="1"
                android:background="@drawable/background_spinner"
                android:paddingRight="5dp">

                <fr.ganfra.materialspinner.MaterialSpinner


                    android:id="@+id/spinnerSex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorBlack"
                    app:ms_arrowSize="@dimen/arrowSize"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelText="floating label"
                    app:ms_hint="@string/sex"
                    app:ms_hintColor="@color/colorBlack"
                    app:ms_multiline="false"
                    app:ms_thickness="@dimen/thickness"


                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_spinner"
                android:paddingRight="5dp"

                >

                <fr.ganfra.materialspinner.MaterialSpinner


                    android:id="@+id/bloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorBlack"
                    app:ms_arrowSize="@dimen/arrowSize"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelText="floating label"
                    app:ms_hint="@string/bloodGroup"
                    app:ms_hintColor="@color/colorBlack"
                    app:ms_multiline="false"
                    app:ms_thickness="@dimen/thickness"


                    />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/presentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:text="@string/present_address"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/headerTextviewSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/relativeMarginRight"
                android:layout_weight="1"
                android:background="@drawable/background_spinner"
                android:paddingRight="@dimen/relativePaddingrRight">

                <fr.ganfra.materialspinner.MaterialSpinner

                    android:id="@+id/districtSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorBlack"
                    app:ms_arrowSize="@dimen/arrowSize"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelColor="#ef28d5"
                    app:ms_floatingLabelText="floating label"
                    app:ms_highlightColor="#e9cc11"
                    app:ms_hint="@string/district"
                    app:ms_hintColor="@color/colorBlack"
                    app:ms_multiline="false"
                    app:ms_thickness="@dimen/thickness"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_spinner"

                android:paddingRight="@dimen/relativePaddingrRight">

                <fr.ganfra.materialspinner.MaterialSpinner

                    android:id="@+id/upazilaSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorBlack"
                    app:ms_arrowSize="@dimen/arrowSize"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelColor="#ef28d5"
                    app:ms_floatingLabelText="floating label"
                    app:ms_highlightColor="#e9cc11"
                    app:ms_hint="@string/Upazila"
                    app:ms_hintColor="@color/colorBlack"
                    app:ms_multiline="false"
                    app:ms_thickness="@dimen/thickness"

                    />
            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/parmanentAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:text="@string/permanent_address"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/headerTextviewSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/registrationFieldMarginTop"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/relativeMarginRight"
                android:layout_weight="1"
                android:background="@drawable/background_spinner"
                android:paddingRight="@dimen/relativePaddingrRight">

                <fr.ganfra.materialspinner.MaterialSpinner

                    android:id="@+id/districtSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_alignLabels="false"
                    app:ms_arrowColor="@color/colorBlack"
                    app:ms_arrowSize="@dimen/arrowSize"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelColor="#ef28d5"
                    app:ms_floatingLabelText="floating label"
                    app:ms_highlightColor="#e9cc11"
                    app:ms_hint="@string/district"
                    app:ms_hintColor="@color/colorBlack"
                    app:ms_multiline="false"
                    app:ms_thickness="@dimen/thickness"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_spinner"
                android:paddingRight="5dp">

                <fr.ganfra.materialspinner.MaterialSpinner


                    android:id="@+id/upazilaSort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_alignLabels="true"
                    app:ms_arrowColor="@color/colorBlack"
                    app:ms_arrowSize="@dimen/arrowSize"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="false"
                    app:ms_floatingLabelText="floating label"
                    app:ms_hint="@string/Upazila"
                    app:ms_hintColor="@color/colorBlack"
                    app:ms_multiline="true"
                    app:ms_thickness="@dimen/thickness"


                    />
            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/loginHeight"
            android:layout_margin="20dp"
            >



            <Button
                android:background="@drawable/button_border"
                android:id="@+id/signIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center"
                android:text="@string/sign_in"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/loginTextsize"

                />


        </RelativeLayout>

        <TextView
            android:id="@+id/backToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            />

    </LinearLayout>

<LinearLayout
    android:id="@+id/verificationLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:gravity="center"
    >

    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:digits="0123456789"
        android:drawablePadding="10dp"
        android:hint="@string/enter_verification_code"
        android:inputType="phone"
        android:maxLength="11" />

    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="15dp"
        android:background="@drawable/button_border"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />
</LinearLayout>

</RelativeLayout>